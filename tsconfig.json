{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "jsx": "react",
    "outDir": "./dist/esm",
    "isolatedModules": true,
    "declaration": true
  },
  "include": [
    "./src"
  ]
}